<h1>New Rating for <%= @book.title %></h1>

<%= form_with(model: [@book, @rating], local: true) do |form| %>
  <% if @rating.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rating.errors.count, "error") %> prohibited this rating from being saved:</h2>

      <ul>
        <% @rating.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :score %>
    <%= form.number_field :score, in: 1..5 %>
  </div>

  <div class="actions">
    <%= form.submit 'Save Rating', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', book_path(@book), class: 'btn btn-secondary' %>
